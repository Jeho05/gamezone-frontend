{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": null,
  "env": {
    "NEXT_PUBLIC_API_BASE": "https://overflowing-fulfillment-production-36c6.up.railway.app/api",
    "NEXT_PUBLIC_KKIAPAY_PUBLIC_KEY": "072b361d25546db0aee3d69bf07b15331c51e39f",
    "NEXT_PUBLIC_KKIAPAY_SANDBOX": "0"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://overflowing-fulfillment-production-36c6.up.railway.app/api/$1" },
    { "source": "/uploads/(.*)", "destination": "https://overflowing-fulfillment-production-36c6.up.railway.app/api/uploads/$1" },
    { "source": "/images/(.*)", "destination": "https://overflowing-fulfillment-production-36c6.up.railway.app/images/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
